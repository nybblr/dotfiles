[user]
	name = Jonathan Martin
	email = me@nybblr.com
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = splice
[diff]
	tool = mvimdiff
[difftool "mvimdiff"]
	cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[mergetool "splice"]
	cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode = true
[push]
	default = current
[color]
	ui = always
[github]
	user = nybblr
[alias]
	bnr = !~/.dotfiles/scripts/git-as.sh ~/.ssh/id_rsa.bnr
