source 'https://rubygems.org/'

# Terminal
gem 'git-smart' # smart pull/rebase/merge/log
# gem 'brewdler' # manage binary deps
gem 'lunchy' # much nicer OSX launchctl

# Vim
gem 'CoffeeTags' # coffeescript support for ctags
gem 'rcodetools' # ruby autocomplete and more

# Prettier IRB
gem 'awesome_print' # indent and color output

# Pry REPL
gem 'pry'
gem 'pry-doc'
gem 'pry-theme'

# CI tests
gem 'travis'
gem 'travis-lint'

# Ruby development
gem 'guard' # run scripts on events
gem 'rb-fsevent' # osx events
gem 'hijack' # debug ruby process
gem 'gem-browse' # clone gem for inspection
gem 'fastri' # more powerful ruby docs

# Assets
gem 'image_optim'
gem 'image_optim_pack'
